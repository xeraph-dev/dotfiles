##### i3-gaps ##############
for_window [class=".*"] border pixel 0
gaps inner 15
gaps outer 1
gaps top -10

# Keybindings
# Scrot
bindsym --release  Print exec scrot -pe 'mv $f ~/Pictures/scrot/'
bindsym --release  $mod+Print exec scrot -pue 'mv $f ~/Pictures/scrot/'
bindsym --release  $mod+Shift+Print exec scrot -ps -e 'mv $f ~/Pictures/scrot/'

# Workspace
bindsym --release $mod+Control+Left workspace prev
bindsym --release $mod+Control+Right workspace next

# Lollypop
bindsym --release $mod+P exec lollypop -t &
bindsym --release $mod+Prior exec lollypop -p &
bindsym --release $mod+Next exec lollypop -n &

# Floatings windows
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

